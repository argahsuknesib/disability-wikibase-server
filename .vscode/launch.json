    "version": "0.2.0",
    "configurations": [
        {
            "name": "Flask App.py",
            "type": "python",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "app.py"
            },
            "args": [
                //  "debug",
                "run",
                "--no-debugger",
                // "--no-reload"
            ],
            "jinja": true,
            "console": "integratedTerminal"
        },
        {
            "name": "Flask manage.py",
            "type": "python",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "manage.py"
            },
            "args": [
                //  "debug",
                "run",
                "--no-debugger",
                // "--no-reload"
            ],
            "jinja": true,
            "console": "integratedTerminal"
        },
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        }
    ]
}